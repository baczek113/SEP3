@page "/admin"
@layout MainLayout
@rendermode InteractiveServer

@using WebApp.DTOs.Company
@using WebApp.Services
@using Microsoft.AspNetCore.Components.Authorization

@inject ICompanyService CompanyService
@inject NavigationManager Nav

<AuthorizeView Roles="admin">
    <Authorized>
        <div class="dash-shell">
            <div class="dash-card">
                <div class="dash-header">
                    <div class="dash-title">
                        <h2>Company Approvals</h2>
                        <p>Below is the list of companies waiting for admin approval.</p>
                    </div>
                </div>

                <div class="dash-content">
                    @if (isLoading)
                    {
                        <div class="dash-loading">Loading pending companies...</div>
                    }
                    else if (pendingCompanies is null || pendingCompanies.Count == 0)
                    {
                        <div class="dash-empty">
                            <h4>No companies awaiting approval 🎉</h4>
                            <p>All registered companies are already approved.</p>
                        </div>
                    }
                    else
                    {
                        <div class="company-list">
                            @foreach (var company in pendingCompanies)
                            {
                                <div class="company-card approval-card">

                                    <div class="company-card-header">
                                        <h3>@company.Name</h3>
                                        @if (!string.IsNullOrWhiteSpace(company.City))
                                        {
                                            <span class="company-location">@company.City @company.Postcode</span>
                                        }
                                    </div>

                                    @if (!string.IsNullOrWhiteSpace(company.Description))
                                    {
                                        <p class="company-description">@company.Description</p>
                                    }

                                    <div class="company-meta">
                                        @if (!string.IsNullOrWhiteSpace(company.Website))
                                        {
                                            <a href="@company.Website" target="_blank" rel="noopener noreferrer">
                                                Visit website
                                            </a>
                                        }

                                        <div style="display:flex; gap:8px;">

                                            <!-- WAŻNE: async lambda -->
                                            <button type="button"
                                                    class="primary-btn approve-btn"
                                                    disabled="@processingIds.Contains(company.Id)"
                                                    @onclick="async () => await Approve(company.Id)">
                                                @if (processingIds.Contains(company.Id))
                                                {
                                                    <span>Approving...</span>
                                                }
                                                else
                                                {
                                                    <span>Approve</span>
                                                }
                                            </button>

                                            <button type="button"
                                                    class="danger-btn"
                                                    @onclick="() => OpenDeleteModal(company.Id, company.Name)">
                                                Delete
                                            </button>

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (showDeleteModal)
        {
            <div class="modal-backdrop">
                <div class="modal-dialog">
                    <h3>Delete company "@companyNameToDelete"?</h3>
                    <p>
                        Are you sure you want to delete this company?
                        <strong>This action cannot be undone.</strong>
                    </p>
                    <p class="modal-warning">
                        All recruiters and job listings related to this company will also be permanently deleted.
                    </p>

                    @if (!string.IsNullOrEmpty(deleteError))
                    {
                        <p class="modal-error">@deleteError</p>
                    }

                    <div class="modal-actions">
                        <!-- async lambda, + type="button" -->
                        <button type="button"
                                class="danger-btn"
                                @onclick="async () => await ConfirmDelete()"
                                disabled="@isDeleting">
                            @(isDeleting ? "Deleting..." : "Delete company")
                        </button>

                        <button type="button"
                                class="secondary-btn"
                                @onclick="CloseDeleteModal"
                                disabled="@isDeleting">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        }
    </Authorized>

    <NotAuthorized>
        <p>You must be logged in as an admin to view this page.</p>
        <a href="/login" class="primary-btn">Go to login</a>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<CompanyDto> pendingCompanies = new();
    private HashSet<long> processingIds = new();
    private bool isLoading = true;
    private bool showDeleteModal = false;
    private long companyIdToDelete;
    private string? companyNameToDelete;
    private bool isDeleting = false;
    private string? deleteError = null;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        pendingCompanies = await CompanyService.GetCompaniesToApproveAsync();
        isLoading = false;
    }

    private async Task Approve(long companyId)
    {
        processingIds.Add(companyId);
        StateHasChanged();

        try
        {
            await CompanyService.ApproveCompany(companyId);
            pendingCompanies.RemoveAll(c => c.Id == companyId);
        }
        finally
        {
            processingIds.Remove(companyId);
            StateHasChanged();
        }
    }

    // ---- DELETE LOGIC ----

    private void OpenDeleteModal(long id, string name)
    {
        companyIdToDelete = id;
        companyNameToDelete = name;
        deleteError = null;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        deleteError = null;
    }

    private async Task ConfirmDelete()
    {
        isDeleting = true;
        deleteError = null;

        try
        {
            await CompanyService.DeleteCompanyAsync(companyIdToDelete);
            pendingCompanies.RemoveAll(c => c.Id == companyIdToDelete);

            CloseDeleteModal();
        }
        catch (Exception ex)
        {
            deleteError = ex.Message;
        }

        isDeleting = false;
        StateHasChanged();
    }
}
