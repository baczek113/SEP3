@page "/company/{CompanyId:long}"
@layout MainLayout
@rendermode InteractiveServer

@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using WebApp.DTOs.Company
@using WebApp.DTOs.Recruiter
@using WebApp.Services

@inject AuthenticationStateProvider AuthStateProvider
@inject HttpCompanyService CompanyService
@inject HttpRecruiterService RecruiterService
@inject NavigationManager Nav

<AuthorizeView Roles="company_representative">
    <Authorized>
        <div class="dash-shell">
            <div class="dash-card company-detail-card">
                <!-- HEADER -->
                <div class="company-detail-header">
                    <div class="company-detail-title">
                        <span class="company-detail-label">Company profile</span>
                        <h2>@(company?.Name ?? "Your company")</h2>

                        @if (!string.IsNullOrWhiteSpace(company?.City))
                        {
                            <p class="company-detail-location">
                                @company.City @company.Postcode
                            </p>
                        }

                        @if (!string.IsNullOrWhiteSpace(company?.Description))
                        {
                            <p class="company-detail-description">
                                @company.Description
                            </p>
                        }

                        <div class="company-detail-meta">
                            @if (!string.IsNullOrWhiteSpace(company?.Website))
                            {
                                <a href="@company.Website" target="_blank" rel="noopener noreferrer">
                                    Visit website
                                </a>
                            }

                            @if (company is not null)
                            {
                                <span class="company-status @(company.IsApproved ? "approved" : "pending")">
                                    @(company.IsApproved ? "Approved" : "Pending approval")
                                </span>
                            }
                        </div>
                    </div>
                    <div class="company-header-actions">
                        @if (company is not null)
                        {
                            <a class="edit-company-btn" href="@($"/company/{CompanyId}/edit")">
                                Edit
                            </a>
                        }
                        <a href="@($"/company/{CompanyId}/register-recruiter")"
                           class="edit-company-btn">
                            Create recruiter account
                        </a>
                    </div>
                </div>

                <!-- CONTENT -->
                <div class="company-detail-content">
                    @if (isLoading)
                    {
                        <div class="dash-loading">
                            Loading company details...
                        </div>
                    }
                    else if (company is null)
                    {
                        <div class="dash-empty">
                            <h4>Company not found</h4>
                            <p>Please go back to your dashboard and select a valid company.</p>
                            <a href="/company-representative/dashboard" class="primary-btn dash-register-btn">
                                Back to dashboard
                            </a>
                        </div>
                    }
                    else
                    {
                        <!-- Recruiters section -->
                        <div class="recruiter-section">
                            <div class="recruiter-header">
                                <h3>Recruiters for this company</h3>
                                <p>Manage people who can post jobs and talk to applicants on behalf of this company.</p>
                            </div>

                            @if (recruiters is null || recruiters.Count == 0)
                            {
                                <div class="dash-empty recruiters-empty">
                                    <h4>No recruiters yet</h4>
                                    <p>Create the first recruiter account to start posting job listings.</p>
                                    <a href="@($"/company/{CompanyId}/register-recruiter")"
                                       class="primary-btn dash-register-btn">
                                        Create recruiter account
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="recruiter-list">
                                    @foreach (var r in recruiters)
                                    {
                                        if (r is null || (string.IsNullOrWhiteSpace(r.Name) &&
                                                          string.IsNullOrWhiteSpace(r.Email) &&
                                                          string.IsNullOrWhiteSpace(r.Position)))
                                        {
                                            continue;
                                        }
                                        <div class="recruiter-card">
                                            <div class="recruiter-main">
                                                <h4>@r.Name</h4>
                                                @if (!string.IsNullOrWhiteSpace(r.Position))
                                                {
                                                    <p class="recruiter-position">
                                                        @r.Position
                                                    </p>
                                                }
                                            </div>
                                            <div class="recruiter-meta">
                                                <span class="recruiter-email">@r.Email</span>
                                                <div class="recruiter-actions">
                                                    <a class="recruiter-edit-link"
                                                       href="@($"/company/{CompanyId}/recruiters/{r.Id}/edit")">
                                                        Edit
                                                    </a>
                                                    <button type="button"
                                                            class="recruiter-delete-link"
                                                            @onclick="@(() => OpenDeleteModal(r.Id, r.Name))">
                                                        Remove
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (showDeleteModal)
        {
            <div class="modal-backdrop">
                <div class="modal-dialog">
                    <h3>Remove recruiter "@recruiterNameToDelete"?</h3>
                    <p>
                        Are you sure you want to remove this recruiter account?
                        This action cannot be undone.
                    </p>
                    <p class="modal-warning">
                        The recruiter will permanently lose access to HireFire
                        and all data directly linked to their account may be deleted.
                    </p>

                    @if (!string.IsNullOrEmpty(deleteErrorMessage))
                    {
                        <p class="modal-error">@deleteErrorMessage</p>
                    }

                    <div class="modal-actions">
                        <button class="danger-btn"
                                @onclick="ConfirmDeleteAsync"
                                disabled="@isDeleting">
                            @(isDeleting ? "Removing..." : "Yes, remove recruiter")
                        </button>
                        <button class="secondary-btn"
                                @onclick="CloseDeleteModal"
                                disabled="@isDeleting">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <p>You must be logged in as a company representative to view this page.</p>
        <a href="/login">Go to login</a>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter] public long CompanyId { get; set; }

    private CompanyDto? company;
    private List<RecruiterDto> recruiters = new();
    private bool isLoading = true;

    // stan modala usuwania rekrutera
    private bool showDeleteModal = false;
    private long? recruiterIdToDelete;
    private string? recruiterNameToDelete;
    private bool isDeleting = false;
    private string? deleteErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var idClaim = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;

            if (long.TryParse(idClaim, out var representativeId) && representativeId > 0)
            {
                var myCompanies = await CompanyService.GetMyCompaniesAsync(representativeId);
                company = myCompanies.FirstOrDefault(c => c.Id == CompanyId);
            }

            recruiters = await RecruiterService.GetRecruitersForCompanyAsync(CompanyId);
        }
        catch
        {
            
        }

        isLoading = false;
    }

    private void OpenDeleteModal(long recruiterId, string? recruiterName)
    {
        recruiterIdToDelete = recruiterId;
        recruiterNameToDelete = string.IsNullOrWhiteSpace(recruiterName)
            ? "this recruiter"
            : recruiterName;
        deleteErrorMessage = null;
        showDeleteModal = true;
    }


    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        recruiterIdToDelete = null;
        recruiterNameToDelete = null;
        deleteErrorMessage = null;
    }

    private async Task ConfirmDeleteAsync()
    {
        if (recruiterIdToDelete is null)
            return;

        isDeleting = true;
        deleteErrorMessage = null;

        try
        {
            await RecruiterService.DeleteRecruiterAsync(recruiterIdToDelete.Value);

            var toRemove = recruiters.FirstOrDefault(r => r.Id == recruiterIdToDelete.Value);
            if (toRemove is not null)
            {
                recruiters.Remove(toRemove);
            }

            CloseDeleteModal();
        }
        catch (Exception ex)
        {
            deleteErrorMessage = $"Failed to remove recruiter: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}
