@page "/recruiter/dashboard"
@layout MainLayout
@rendermode InteractiveServer

@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using WebApp.DTOs.Job
@using WebApp.Services

@inject HttpJobListingService JobListingService
@inject NavigationManager Nav

<AuthorizeView Roles="recruiter">
    <Authorized Context="_">
        <div class="dash-shell">
            <div class="dash-card">
                <div class="dash-header">
                    <div class="dash-title">
                        <h2>Hello @userName</h2>
                        <p>Here are the job listings you have created on HireFire.</p>
                    </div>

                    <a href="/create-job-listing" class="primary-btn dash-register-btn">
                        Create Job Listing
                    </a>
                </div>
                
                @* Notification UI *@
                @if (!string.IsNullOrEmpty(notificationMessage))
                {
                    <div class="alert @(notificationType == "success" ? "alert-success" : "alert-danger")">
                        @notificationMessage
                    </div>
                }

                <div class="dash-content">
                    @if (isLoading)
                    {
                        <div class="dash-loading">
                            Loading your job listings...
                        </div>
                    }
                    else if (jobListings is null || jobListings.Count == 0)
                    {
                        <div class="dash-empty">
                            <h4>No job listings yet</h4>
                            <p>Start by creating your first job listing.</p>
                            <a href="/create-job-listing" class="primary-btn dash-register-btn">
                                Create Job Listing
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="job-list">
                            @foreach (var job in jobListings)
                            {
                                <div class="job-card">
                                    <div class="job-card-header">
                                        <h3>@job.Title</h3>
                                        @if (!string.IsNullOrWhiteSpace(job.DatePosted.ToString()))
                                        {
                                            <span class="job-date">@job.DatePosted.ToShortDateString()</span>
                                        }
                                    </div>

                                    @if (!string.IsNullOrWhiteSpace(job.Description))
                                    {
                                        <p class="job-description">@job.Description</p>
                                    }

                                    <div class="job-meta">
                                        @if (!string.IsNullOrWhiteSpace(job.Salary.ToString()))
                                        {
                                            <span class="job-salary">Salary: @job.Salary</span>
                                        }
                                        <span class="job-id">ID: @job.Id</span>
                                    </div>

                                    <div class="job-actions-row mt-3 d-flex gap-2">
                                        <!-- Button 1: Review Pending Applications (The Swiper) -->
                                        <a href="/recruiter/job/@job.Id/applications" class="btn btn-outline-primary flex-grow-1">
                                            🔍 Review
                                        </a>
                                        
                                        <a href="/recruiter/job/@job.Id/matches" class="btn btn-success flex-grow-1">
                                            💬 Matches
                                        </a>
                                        
                                        <a href="javascript:void(0)"
                                           class="btn btn-danger flex-grow-1"
                                           @onclick="() => ConfirmDelete(job.Id)">
                                            🗑️ Remove
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    
                    @* Confirmation Modal for Remove Job Listing *@
                    @if (showDeleteModal)
                    {
                        <div class="modal-backdrop fade show"></div>

                        <div class="modal fade show d-block" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content p-3">
                                    <h5>Confirm Deletion</h5>
                                    <p>Are you sure you want to delete this job listing?</p>

                                    <div class="d-flex justify-content-end gap-2">
                                        <button class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                                        <button class="btn btn-danger" @onclick="DeleteJob">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <p>You must be logged in as a recruiter to view this page.</p>
        <a href="/login">Go to login</a>
    </NotAuthorized>
</AuthorizeView>

@code {
    [CascadingParameter] private Task<AuthenticationState> AuthenticationStateTask { get; set; } = default!;

    private string userName = "there";
    private long recruiterId;
    private List<JobListingDto> jobListings = new();
    private bool isLoading = true;
    
    private bool showDeleteModal = false;
    private long pendingDeleteJobId;
    private string? notificationMessage = null;
    private string notificationType = ""; // "success" or "error"

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateTask;
        var user = authState.User;

        userName = user.Identity?.Name ?? "there";

        var idClaim = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        long.TryParse(idClaim, out recruiterId);

        if (recruiterId > 0)
        {
            jobListings = await JobListingService.GetByRecruiterAsync(recruiterId);
        }

        isLoading = false;
    }

    private void ConfirmDelete(long jobId)
    {
        pendingDeleteJobId = jobId;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        pendingDeleteJobId = 0;
    }

    private async Task DeleteJob()
    {
        showDeleteModal = false;
        notificationMessage = null;

        try
        {
            var result = await JobListingService.DeleteJobListingAsync(pendingDeleteJobId);

            if (result.Success)
            {
                notificationMessage = "Job listing removed successfully.";
                notificationType = "success";

                // 🔥 Remove from UI immediately (just like companies)
                var toRemove = jobListings.FirstOrDefault(j => j.Id == pendingDeleteJobId);
                if (toRemove != null)
                {
                    jobListings.Remove(toRemove);
                }

                // 🔥 Force UI update immediately
                StateHasChanged();
            }
            else
            {
                notificationMessage = result.Message ?? "Failed to remove job listing.";
                notificationType = "error";
            }
        }
        catch (Exception ex)
        {
            notificationMessage = $"Error removing job listing: {ex.Message}";
            notificationType = "error";
        }
    }

}