@page "/recruiter/dashboard"
@layout MainLayout
@rendermode InteractiveServer

@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using WebApp.DTOs.Job
@using WebApp.Services

@inject HttpJobListingService JobListingService

<AuthorizeView Roles="recruiter">
    <Authorized Context="_">
        <div class="dash-shell">
            <div class="dash-card">
                <div class="dash-header">
                    <div class="dash-title">
                        <h2>Hello @userName</h2>
                        <p>Here are the job listings you have created on HireFire.</p>
                    </div>

                    <a href="/create-job-listing" class="primary-btn dash-register-btn">
                        Create Job Listing
                    </a>
                </div>

                <div class="dash-content">
                    @if (isLoading)
                    {
                        <div class="dash-loading">
                            Loading your job listings...
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(statusMessage))
                    {
                        <div class="alert @statusMessageClass" role="alert">@statusMessage</div>
                    }
                    else if (jobListings is null || jobListings.Count == 0)
                    {
                        <div class="dash-empty">
                            <h4>No job listings yet</h4>
                            <p>Start by creating your first job listing.</p>
                            <a href="/create-job-listing" class="primary-btn dash-register-btn">
                                Create Job Listing
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="job-list">
                            @foreach (var job in jobListings)
                            {
                                <div class="job-card">
                                    <div class="job-card-header job-card-header--with-actions">
                                        <div class="job-card-header-left">
                                            <h3>@job.Title</h3>
                                            @if (!string.IsNullOrWhiteSpace(job.DatePosted.ToString()))
                                            {
                                                <span class="job-date">@job.DatePosted.ToShortDateString()</span>
                                            }
                                        </div>

                                        <!-- Remove button moved to top-right -->
                                        <button type="button"
                                                class="btn btn-danger btn-sm job-remove-top"
                                                title="Remove job listing"
                                                @onclick="() => OpenDeleteModal(job)">
                                            Remove
                                        </button>
                                    </div>

                                    @if (!string.IsNullOrWhiteSpace(job.Description))
                                    {
                                        <p class="job-description">@job.Description</p>
                                    }

                                    <div class="job-meta">
                                        @if (!string.IsNullOrWhiteSpace(job.Salary.ToString()))
                                        {
                                            <span class="job-salary">Salary: @job.Salary</span>
                                        }
                                        <span class="job-status-pill @(job.IsClosed ? "closed" : "open")">
                                            @(job.IsClosed ? "Closed" : "Open")
                                        </span>
                                    </div>

                                    <div class="job-actions-row mt-3 d-flex gap-2">
                                        <a href="/recruiter/job/@job.Id/applications" class="btn btn-outline-primary flex-grow-1">
                                            Review
                                        </a>

                                        <a href="/recruiter/job/@job.Id/matches" class="btn btn-success flex-grow-1">
                                            Matches
                                        </a>

                                        <a href="/job/edit/@job.Id" class="btn btn-secondary flex-grow-1">
                                            Edit
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (isDeleteModalOpen)
        {
            <div class="hf-modal-backdrop" @onclick="CloseDeleteModal">
                <div class="hf-modal" role="dialog" aria-modal="true" aria-labelledby="hfDeleteTitle"
                     @onclick:stopPropagation="true">
                    <div class="hf-modal-header">
                        <h5 id="hfDeleteTitle" class="hf-modal-title">Remove job listing</h5>
                        <button type="button" class="hf-modal-close" aria-label="Close" @onclick="CloseDeleteModal">Ã—</button>
                    </div>

                    <div class="hf-modal-body">
                        <p class="hf-modal-warning">
                            Are you sure you want to remove this job listing?
                        </p>
                        <p class="hf-modal-warning">
                            You will lose all applications and chats associated with it.
                        </p>

                        @if (jobToDelete is not null)
                        {
                            <div class="hf-modal-jobinfo">
                                <div><strong>Title:</strong> @jobToDelete.Title</div>
                            </div>
                        }
                    </div>

                    <div class="hf-modal-footer">
                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="CloseDeleteModal"
                                disabled="@isDeleting">
                            Cancel
                        </button>

                        <button type="button"
                                class="btn btn-danger"
                                @onclick="ConfirmDeleteAsync"
                                disabled="@isDeleting">
                            @(isDeleting ? "Removing..." : "Remove")
                        </button>
                    </div>
                </div>
            </div>
        }
    </Authorized>

    <NotAuthorized>
        <p>You must be logged in as a recruiter to view this page.</p>
        <a href="/login">Go to login</a>
    </NotAuthorized>
</AuthorizeView>

@code {
    [CascadingParameter] private Task<AuthenticationState> AuthenticationStateTask { get; set; } = default!;

    private string userName = "there";
    private long recruiterId;
    private List<JobListingDto> jobListings = new();
    private bool isLoading = true;

    private string? statusMessage;
    private string statusMessageClass = "alert-warning";

    private bool isDeleteModalOpen;
    private bool isDeleting;
    private JobListingDto? jobToDelete;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateTask;
        var user = authState.User;

        userName = user.Identity?.Name ?? "there";

        var idClaim = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        long.TryParse(idClaim, out recruiterId);

        if (recruiterId > 0)
        {
            jobListings = await JobListingService.GetByRecruiterAsync(recruiterId);
        }

        isLoading = false;
    }

    private void OpenDeleteModal(JobListingDto job)
    {
        statusMessage = null;
        jobToDelete = job;
        isDeleteModalOpen = true;
    }

    private void CloseDeleteModal()
    {
        if (isDeleting) return;
        isDeleteModalOpen = false;
        jobToDelete = null;
    }

    private async Task ConfirmDeleteAsync()
    {
        if (jobToDelete is null) return;

        isDeleting = true;
        statusMessage = null;

        try
        {
            await JobListingService.DeleteJobListingAsync(jobToDelete.Id);

            jobListings.Remove(jobToDelete);

            // No success message (per your request)
            statusMessage = null;
        }
        catch
        {
            statusMessageClass = "alert-danger";
            statusMessage = "Failed to remove the job listing. Please try again.";
        }
        finally
        {
            isDeleting = false;
            isDeleteModalOpen = false;
            jobToDelete = null;
        }
    }
}
