@page "/applicant/dashboard"

@using WebApp.DTOs.Job
@using WebApp.DTOs.Application
@using Microsoft.AspNetCore.Components.Web
@using System.Security.Claims
@using WebApp.Services
@using WebApp.Authentication
@inject HttpApplicantService ApplicantService
@inject HttpApplicationService ApplicationService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<AuthorizeView Roles="applicant">
    <Authorized Context="_">
        <div class="dash-shell">
            <div class="dash-card job-swipe-shell" tabindex="0" @onkeydown="HandleKeyDown">
                <div class="dash-header">
                    <div class="dash-title">
                        <h2>Discover jobs</h2>
                        <p>Use ← to skip, → to apply. Simple as Tinder.</p>
                    </div>

                    <div class="dash-header">
                        <div class="dash-title">
                            <h2>Discover jobs</h2>
                            <p>Use ← to skip, → to apply. Simple as Tinder.</p>
                        </div>

                        <div class="d-flex gap-2">
                            <a href="/applicant/applications" class="btn btn-outline-primary">
                                View My Applications
                            </a>

                            <button class="btn btn-danger" @onclick="ShowDeleteConfirm">
                                🗑️ Delete My Profile
                            </button>
                        </div>
                    </div>
                </div>

                <div class="dash-content">
                    @if (isLoading)
                    {
                        <p class="dash-loading">Loading job matches...</p>
                    }
                    else if (!string.IsNullOrWhiteSpace(errorMessage))
                    {
                        <p class="dash-empty">@errorMessage</p>
                    }
                    else if (CurrentJob is null)
                    {
                        <div class="dash-empty">
                            <h4>No more job listings right now</h4>
                            <p>Check back later or update your skills.</p>
                        </div>
                    }
                    else
                    {
                        <div class="job-card-main">
                            <div class="job-card-header">
                                <h3>@CurrentJob.Title</h3>

                                <span class="job-location">@CurrentJob.City</span>
                            </div>

                            @if (CurrentJob.Salary is not null)
                            {
                                <p class="job-salary">@($"{CurrentJob.Salary:C0}")</p>
                            }

                            @if (!string.IsNullOrWhiteSpace(CurrentJob.Description))
                            {
                                <p class="job-description">@CurrentJob.Description</p>
                            }

                            <div class="job-meta-row">
                                <span class="job-meta-pill">
                                    Posted @CurrentJob.DatePosted.ToShortDateString()
                                </span>
                                <span class="job-meta-pill subtle">Job #@CurrentJob.Id</span>
                            </div>
                        </div>

                        <div class="job-actions">
                            <button class="job-btn job-btn-decline" @onclick="Decline">
                                ❌ Skip<br /><span>Left arrow</span>
                            </button>

                            <button class="job-btn job-btn-accept" @onclick="AcceptAsync">
                                ✅ Apply<br /><span>Right arrow</span>
                            </button>
                        </div>

                        <p class="job-counter">@((currentIndex + 1)) / @jobListings.Count</p>
                    }
                </div>
            </div>
        </div>

        @* -------------------- DELETE CONFIRM MODAL -------------------- *@

        @if (showDeleteModal)
        {
            <div class="modal-backdrop fade show"></div>

            <div class="modal fade show d-block" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content p-3">

                        <h5>Confirm Profile Deletion</h5>
                        <p>
                            Are you sure you want to delete your applicant profile?
                            This action cannot be undone.
                        </p>

                        @if (!string.IsNullOrEmpty(deleteMessage))
                        {
                            <p class="text-danger">@deleteMessage</p>
                        }

                        <div class="d-flex justify-content-end gap-2">
                            <button class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                            <button class="btn btn-danger" @onclick="DeleteApplicantAsync">
                                Delete Profile
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        }
    </Authorized>

    <NotAuthorized>
        <div class="dash-shell">
            <div class="dash-card">
                <p>You must be logged in as an applicant to see this page.</p>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private long _applicantId;
    private List<JobListingDto> jobListings = new();
    private int currentIndex = 0;
    private bool isLoading = true;
    private string? errorMessage;

    // NEW FIELDS
    private bool showDeleteModal = false;
    private string? deleteMessage = null;

    // --------------------------------------------------------------------------
    // JOB LISTING NAVIGATION
    // --------------------------------------------------------------------------

    private JobListingDto? CurrentJob =>
        (currentIndex >= 0 && currentIndex < jobListings.Count)
            ? jobListings[currentIndex]
            : null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            _applicantId = await ResolveApplicantIdAsync();
            if (_applicantId == 0)
            {
                errorMessage = "Cannot resolve applicant id.";
                return;
            }

            jobListings = await ApplicantService.GetSuggestJobListingAsync(_applicantId);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task<long> ResolveApplicantIdAsync()
    {
        var state = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = state.User;

        var value = user.FindFirst("applicant_id")?.Value
                    ?? user.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        return long.TryParse(value, out var id) ? id : 0;
    }

    // --------------------------------------------------------------------------
    // DELETE PROFILE LOGIC
    // --------------------------------------------------------------------------

    private void ShowDeleteConfirm()
    {
        deleteMessage = null;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        deleteMessage = null;
    }

    private async Task DeleteApplicantAsync()
    {
        try
        {
            deleteMessage = null;

            var result = await ApplicantService.DeleteApplicantAsync(_applicantId);

            if (!result.Success)
            {
                deleteMessage = result.Message;
                return;
            }

            // SUCCESS → Logout user
            if (AuthStateProvider is AuthProvider auth)
            {
                await auth.LogoutAsync();
            }

            // Redirect to homepage
            Nav.NavigateTo("/", true);
        }
        catch (Exception ex)
        {
            deleteMessage = ex.Message;
        }
    }

    // --------------------------------------------------------------------------
    // SWIPE / APPLY / DECLINE
    // --------------------------------------------------------------------------

    private async Task AcceptAsync()
    {
        if (CurrentJob is null) return;

        try
        {
            var dto = new CreateApplicationDto
            {
                JobId = CurrentJob.Id,
                ApplicantId = _applicantId
            };

            await ApplicationService.CreateAsync(dto);
            MoveNext();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private async Task Decline()
    {
        if (CurrentJob is null) return;

        try
        {
            var createDto = new CreateApplicationDto
            {
                JobId = CurrentJob.Id,
                ApplicantId = _applicantId
            };

            var created = await ApplicationService.CreateAsync(createDto);

            await ApplicationService.RejectAsync(created.Id);

            MoveNext();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private void MoveNext()
    {
        currentIndex++;
        if (currentIndex >= jobListings.Count)
            currentIndex = jobListings.Count;
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "ArrowRight")
            await AcceptAsync();

        else if (e.Key == "ArrowLeft")
            Decline();
    }
}
